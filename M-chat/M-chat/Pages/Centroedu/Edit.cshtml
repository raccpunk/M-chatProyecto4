@page
@model M_chat.Pages.Centroedu.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CentroEducativo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CentroEducativo.Clave" />
            <div class="form-group">
                <label asp-for="CentroEducativo.Nombre" class="control-label"></label>
                <input asp-for="CentroEducativo.Nombre" class="form-control" />
                <span asp-validation-for="CentroEducativo.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CentroEducativo.Telefono" class="control-label"></label>
                <input asp-for="CentroEducativo.Telefono" class="form-control" />
                <span asp-validation-for="CentroEducativo.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CentroEducativo.NivelEducativo" class="control-label"></label>
                <input asp-for="CentroEducativo.NivelEducativo" class="form-control" />
                <span asp-validation-for="CentroEducativo.NivelEducativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CentroEducativo.Direccion" class="control-label"></label>
                <input asp-for="CentroEducativo.Direccion" class="form-control" />
                <span asp-validation-for="CentroEducativo.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CentroEducativo.Representante" class="control-label"></label>
                <input asp-for="CentroEducativo.Representante" class="form-control" />
                <span asp-validation-for="CentroEducativo.Representante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../InicioUsuario" asp-route-email="@Model.email">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
