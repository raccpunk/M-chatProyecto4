@page
@model M_chat.Pages.RegistrarninioModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Registrarninio";
}
<head>
    <style type="text/css">
        body {
            color: #999;
            background: #f3f3f3;
            font-family: 'Roboto', sans-serif;
        }

        .form-control {
            border-color: #eee;
            min-height: 41px;
            box-shadow: none !important;
        }

            .form-control:focus {
                border-color: #5cd3b4;
            }

        .form-control, .btn {
            border-radius: 3px;
        }

        .signup-form {
            width: 500px;
            margin: 0 auto;
            padding: 30px 0;
        }

            .signup-form h2 {
                color: #000000;
                margin: 0 0 30px 0;
                display: inline-block;
                padding: 0 30px 10px 0;
                border-bottom: 3px solid #5cd3b4;
            }

            .signup-form form {
                color: #999;
                border-radius: 3px;
                margin-bottom: 15px;
                background: #fff;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .signup-form .form-group {
                margin-bottom: 20px;
            }

            .signup-form label {
                font-weight: normal;
                font-size: 13px;
            }

            .signup-form input[type="checkbox"] {
                margin-top: 2px;
            }

            .signup-form .btn {
                font-size: 16px;
                font-weight: bold;
                background: #5cd3b4;
                border: none;
                margin-top: 20px;
                min-width: 140px;
            }

                .signup-form .btn:hover, .signup-form .btn:focus {
                    /*background: #;*/
                    outline: none !important;
                }

            .signup-form a {
                color: #5cd3b4;
                text-decoration: underline;
            }

                .signup-form a:hover {
                    text-decoration: none;
                }

            .signup-form form a {
                color: #5cd3b4;
                text-decoration: none;
            }

                .signup-form form a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<div class="align-content-end float-right">
    <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-page="../InicioUsuario" asp-route-email="@Model.email">Inicio</a>
</div>
<body>
    <div class="signup-form">
        <form method="post" class="form-horizontal">
            <div class="col-xs-8 col-xs-offset-4">
                <h2>Registro Del Niño</h2>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-4">E-mail del Tutor</label>
                <div class="col-xs-8">
                    <INPUT type="email" class="form-control" asp-for="@Model.ninio.Email" required="required" value="@Model.email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-4">Nombre</label>
                <div class="col-xs-8">
                    <input type="text" class="form-control" asp-for="@Model.ninio.Nombre" required="required">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-4">Apellidos</label>
                <div class="col-xs-8">
                    <input type="text" class="form-control" asp-for="@Model.ninio.Apellidos" required="required">
                </div>
            </div>
            <div class="form-group">
                <select asp-for="@Model.ninio.ClaveEscuela" asp-items="@(new SelectList(Model.centroEducativos,"Clave","Nombre"))">
                    <option selected disabled> Seleccion su Centro Educativo </option>

                     
                </select>
            </div>
            <label for="start">Fecha de Nacimiento:</label>

            <input type="date" id="start" asp-for="@Model.ninio.FechaNacimiento
                   value=" 2018-07-22"
                   min="1900-01-01" max="2025-12-31">
            
        <div class="form-group">
            <label class="control-label col-xs-4">CURP</label>
            <div class="col-xs-8">
                <input type="text" class="form-control" asp-for="@Model.ninio.Curp" required="required">
            </div>
        </div>


        <div class="form-group">
            <select asp-for="@Model.ninio.Genero">
                <option selected disabled> Seleccion su sexo </option>
                <option value="Hombre">Hombre</option>
                <option value="Mujer">Mujer</option>


            </select>
        </div>
        <div class="form-group">
            <div class="col-xs-8 col-xs-offset-4">
                <p><label class="checkbox-inline"><input type="checkbox" required="required"> Acepto los terminos y condiciones<a href="#"></a> &amp; <a href="~/img/Politicas de la pagina web.pdf">Politica de privacidad</a>.</label></p>
                <button type="submit" class="btn btn-primary btn-lg">Registrar Niño</button>
            </div>
        </div>

        </form>

</div>

</body>


