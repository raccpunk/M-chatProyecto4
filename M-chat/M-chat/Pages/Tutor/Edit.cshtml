@page
@model M_chat.Pages.Tutor.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Perfil</h1>

<h4>Tutor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tutor.Email" />
            <div class="form-group">
                <label asp-for="Tutor.Nombre" class="control-label"></label>
                <input asp-for="Tutor.Nombre" class="form-control" />
                <span asp-validation-for="Tutor.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tutor.Apellidos" class="control-label"></label>
                <input asp-for="Tutor.Apellidos" class="form-control" />
                <span asp-validation-for="Tutor.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tutor.FechaNacimiento" class="control-label"></label>
                <input asp-for="Tutor.FechaNacimiento" class="form-control" />
                <span asp-validation-for="Tutor.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tutor.Genero" class="control-label"></label>
                <input asp-for="Tutor.Genero" class="form-control" />
                <span asp-validation-for="Tutor.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tutor.Curp" class="control-label"></label>
                <input asp-for="Tutor.Curp" class="form-control" />
                <span asp-validation-for="Tutor.Curp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contraseña</label>
                <input asp-for="Tutor.Contrasenia" class="form-control" value="" />
                <span asp-validation-for="Tutor.Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id="@Model.Tutor.Email" asp-page="./Profile">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
